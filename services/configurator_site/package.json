{
  "name": "@site-builder/configurator-service",
  "version": "1.0.0",
  "description": "Independent configurator service for site builder MVP - handles anonymous draft creation, preview rendering, and migration to permanent storage",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "db:migrate": "tsx src/infrastructure/scripts/migrate.ts",
    "cleanup:run": "tsx src/infrastructure/jobs/CleanupExpiredDraftsJob.ts"
  },
  "keywords": [
    "site-builder",
    "configurator",
    "microservice",
    "fastify"
  ],
  "author": "Site Builder Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/multipart": "^8.1.0",
    "@fastify/static": "^7.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "fastify": "^4.26.0",
    "zod": "^3.22.4",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "minio": "^7.1.3",
    "sharp": "^0.33.2",
    "ejs": "^3.1.9",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "dotenv": "^16.4.1",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1",
    "file-type": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/ejs": "^3.1.5",
    "@types/uuid": "^9.0.8",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
